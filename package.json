{
  "name": "nooa-core-engine",
  "version": "1.4.0",
  "description": "Architectural Grammar Validator & Code Hygiene Guardian for TypeScript Projects",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main/server.js",
    "dev": "ts-node src/main/server.ts",
    "analyze": "npm run build && npm start",
    "dogfooding": "npm run build && npm start .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "clean-architecture",
    "typescript",
    "code-analysis",
    "architectural-validation",
    "dependency-analysis",
    "code-hygiene",
    "duplicate-detection",
    "dead-code-detection",
    "circular-dependencies",
    "static-analysis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "ts-morph": "^21.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^1.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
